; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[*{.js,json}]
indent_style = space
indent_size = 4

[{tailwind.config.js,elao-design-system.js}]
indent_size = 2

[postcss.config.js]
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
